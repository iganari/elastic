server {
  listen 80   default_server;
  server_name jenkins.hejda.org;

  access_log /var/log/nginx/jenkins_access.log;
  error_log  /var/log/nginx/jenkins_error.log;

  location / {
    ### httpで来たものをhttpsへリダイレクトする
    rewrite ^(.*) https://jenkins.hejda.org$1 permanent;
  }
}

server {

  # listen 80;
  # listen 443;
  # listen 443 default ssl;
  listen 443  ssl default_server;
  server_name jenkins.hejda.org;
 
  ssl on;
  ssl_certificate      /etc/nginx/ssl-sha2/wildcard.hejda.org.crt;
  ssl_certificate_key  /etc/nginx/ssl-sha2/wildcard.hejda.org.key.nopass;
  ssl_protocols        SSLv3 TLSv1;
  ssl_ciphers          HIGH:!ADH:!MD5;

  access_log /var/log/nginx/jenkins_ssl_access.log;
  error_log  /var/log/nginx/jenkins_ssl_error.log;

  location / {
    proxy_pass              http://localhost:8080;
    proxy_set_header        Host $host;
    proxy_set_header        X-Real-IP $remote_addr;
    proxy_set_header        X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_connect_timeout   150;
    proxy_send_timeout      100;
    proxy_read_timeout      100;
    proxy_buffers           4 32k;
    client_max_body_size    4G;
    client_body_buffer_size 128k;    
  }

    error_page   500 502 503 504  /50x.html;

    location = /50x.html {
            root   html;
    }
}
